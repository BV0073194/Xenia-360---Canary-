<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Xenia_360____Canary_.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Xenia_360____Canary_.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarBackgroundColor="#222"
    Shell.TabBarTitleColor="White"
    Shell.TabBarUnselectedColor="Gray">

    <TabBar>
        <ShellContent
            Title="Game Library"
            ContentTemplate="{DataTemplate local:GameLibraryPage}"
            Route="GameLibraryPage" />
        <ShellContent
            Title="Xenia Store"
            ContentTemplate="{DataTemplate local:XeniaStorePage}"
            Route="XeniaStorePage" />
        <ShellContent
            Title="Downloads"
            ContentTemplate="{DataTemplate local:DownloadQueuePage}"
            Route="DownloadQueuePage" />
        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate local:SettingsPage}"
            Route="SettingsPage" />
    </TabBar>

</Shell>